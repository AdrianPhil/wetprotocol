package ui;

import javax.swing.tree.DefaultMutableTreeNode;
import javax.swing.tree.DefaultTreeCellRenderer;
import javax.swing.tree.TreeCellRenderer;

import org.apache.jena.ontology.Individual;
import org.apache.jena.ontology.OntClass;
import org.apache.jena.ontology.OntProperty;
import org.apache.jena.ontology.OntResource;

import ont.PropertyValue;
import resources.ResourceFindingDummyClass;

import java.awt.Color;
import java.awt.Component;

import javax.swing.*;

public class PropertiesCellRenderer implements TreeCellRenderer {
	JLabel localName = new JLabel(" ");
	JLabel PropertyValueValue = new JLabel("value:?");
	JLabel PropertyValueRange = new JLabel(" ");
	JLabel PropertyValueDomain = new JLabel(" ");
	JLabel imageLabel = new JLabel();
	JPanel renderer = new JPanel();

	DefaultTreeCellRenderer defaultRenderer = new DefaultTreeCellRenderer();
	Color backgroundSelectionColor;
	Color backgroundNonSelectionColor;
	// ImageIcon createImageIcon = ResourceFindingDummyClass.createImageIcon("pipette.png");
	Icon iconObjectProperty = UIManager.getIcon("FileChooser.detailsViewIcon");// http://en-human-begin.blogspot.ca/2007/11/javas-icons-by-default.html
	Icon iconDataProperty = UIManager.getIcon("Tree.leafIcon");// http://en-human-begin.blogspot.ca/2007/11/javas-icons-by-default.html

	public PropertiesCellRenderer() {
		renderer.add(imageLabel);
		
		localName.setForeground(Color.BLACK);
		renderer.add(localName);
		
		PropertyValueValue.setForeground(Color.BLACK);
		renderer.add(PropertyValueValue);
		
		PropertyValueRange.setForeground(Color.BLACK);
		renderer.add(PropertyValueRange);
		
		PropertyValueDomain.setForeground(Color.BLACK);
		renderer.add(PropertyValueRange);
		
		renderer.setBorder(null);		
		backgroundSelectionColor = defaultRenderer.getBackgroundSelectionColor();
		backgroundNonSelectionColor = defaultRenderer.getBackgroundNonSelectionColor();
	}

	@Override
	public Component getTreeCellRendererComponent(JTree tree, Object value, boolean selected, boolean expanded, boolean leaf, int row, boolean hasFocus) {
		Component returnValue = null;
		if (value == null || !(value instanceof DefaultMutableTreeNode) ) {
			UiUtils.showDialog(tree, "The tree value is null or not a value instanceof DefaultMutableTreeNode. Using default renderer");
			return defaultRenderer.getTreeCellRendererComponent(tree, value, selected, expanded, leaf, row, hasFocus);//----------------->
		}
			Object userObject = ((DefaultMutableTreeNode) value).getUserObject();
			if (userObject instanceof PropertyValue) {
				PropertyValue propertyValue = (PropertyValue) userObject;
				localName.setText(propertyValue.getOntProperty().getLocalName());
				PropertyValueDomain.setText(" Domain:" + propertyValue.getOntProperty().getDomain());
				PropertyValueRange.setText(" Range:" + propertyValue.getOntProperty().getRange().getLocalName());
				PropertyValueValue.setText(" Value:" + propertyValue.getValue());
				if (selected) {
					renderer.setBackground(backgroundSelectionColor);
				} else {
					renderer.setBackground(backgroundNonSelectionColor);
				}
				if (propertyValue.getOntProperty().isObjectProperty()) {
					imageLabel.setIcon(iconObjectProperty);
				} else if (userObject instanceof PropertyValue) {
					imageLabel.setIcon(iconDataProperty);
				} else {
					UiUtils.showDialog(tree, "This property is not a data property nor an object property");
				}
				renderer.setEnabled(tree.isEnabled());
				returnValue = renderer;
			}
		if (returnValue == null) {
			UiUtils.showDialog(tree, "The property value to be rendered for:" + ((OntResource)userObject).getLocalName() + " is null. Using default renderer");
			returnValue = defaultRenderer.getTreeCellRendererComponent(tree, value, selected, expanded, leaf, row, hasFocus);
		}
		return returnValue;
	}
}
